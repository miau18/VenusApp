<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fef7ff"
    tools:context=".ui.auth.usuaria.LoginUsuaria">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/logo_venus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/fieldsContainerLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/layoutNormalLogin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextEmail3"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Email:"
                android:textColor="#6B6670"
                android:textColorHint="#cac4d0"
                android:background="@drawable/rounded_edittext"
                android:padding="16dp"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/editTextSenha3"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:hint="Senha:"
                android:textColor="#6B6670"
                android:textColorHint="#cac4d0"
                android:background="@drawable/rounded_edittext"
                android:padding="16dp"
                android:inputType="textPassword"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAnonimoLogin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <EditText
                android:id="@+id/editTextCodinomeLogin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Codinome:"
                android:textColor="#6B6670"
                android:textColorHint="#cac4d0"
                android:background="@drawable/rounded_edittext"
                android:padding="16dp"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editTextSenhaAnonimaLogin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:hint="Senha:"
                android:textColor="#6B6670"
                android:textColorHint="#cac4d0"
                android:background="@drawable/rounded_edittext"
                android:padding="16dp"
                android:inputType="textPassword"/>
        </LinearLayout>

    </FrameLayout>

    <CheckBox
        android:id="@+id/checkAnonimo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Entrar como anÃ´nima"
        android:textColor="#6B6670"
        app:layout_constraintTop_toBottomOf="@id/fieldsContainerLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_button"
        android:textSize="18sp"
        android:text="Entrar"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkAnonimo" />

</androidx.constraintlayout.widget.ConstraintLayout>