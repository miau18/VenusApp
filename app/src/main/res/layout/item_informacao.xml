<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutItemClick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="horizontal"
    android:background="#FEF7FF"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgTema"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/obstetric"
        app:shapeAppearanceOverlay="@style/CircleImage"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/txtTituloTema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6750a4"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Título Exemplo"/>

        <TextView
            android:id="@+id/txtDescricaoTema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6b6670"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Descrição exemplo..."/>

    </LinearLayout>

</LinearLayout>